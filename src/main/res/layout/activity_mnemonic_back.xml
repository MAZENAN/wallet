<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical">
<include layout="@layout/common_toolbar" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center_vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/mnemonic_backup_tips1"
        android:textSize="24sp"
        android:textColor="@color/global_black"
        android:gravity="center"/>
    <TextView
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:text="@string/mnemonic_backup_tips2"
        android:textSize="@dimen/sp_14"
        android:textColor="#FF999999"
        android:gravity="center|left"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_15"/>
    <TextView
        android:id="@+id/tv_mnemonic"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_20"
        android:paddingRight="@dimen/dp_20"
        android:paddingTop="@dimen/dp_15"
        android:paddingBottom="@dimen/dp_15"
        android:layout_marginTop="15dp"
        android:layout_gravity="center"
        android:background="@drawable/radius_10_card_gray"
        android:textColor="#FF333333"
        android:textSize="14sp"/>
    <Button
        android:id="@+id/btn_next"
        android:text="@string/wallet_backup_backup_btn"
        android:layout_gravity="center"
        android:layout_marginTop="19dp"
        style="@style/button_red"/>
</LinearLayout>
</FrameLayout>
