<LinearLayout
    android:layout_width="310dp"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    android:orientation="vertical"
    android:id="@+id/ll_nav"
    android:background="@color/white"
    android:paddingStart="@dimen/dp_20"
    android:paddingEnd="@dimen/dp_20"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp">
        <ImageView
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:id="@+id/avator"
            android:src="@drawable/icon_avator"
            android:layout_centerInParent="true"/>
        <TextView
            android:id="@+id/tv_identity_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/avator"
            android:textSize="@dimen/sp_18"
            android:textColor="@color/identity_name"
            android:textStyle="bold"
            android:layout_centerInParent="true"
            android:layout_marginTop="@dimen/dp_10"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/mine_menu_divider_color"
            />
    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rc_wallet_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="start"
        android:layout_weight="1"
        android:overScrollMode="never"/>
</LinearLayout>