<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/common_toolbar" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="70dp"
        android:text="@string/verify_backup_tip1"
        android:textColor="@color/global_black"
        android:textSize="24sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="53dp"
        android:layout_marginRight="53dp"
        android:layout_marginTop="@dimen/dp_15"
        android:text="@string/verify_backup_tip2"
        android:textColor="#FF999999"
        android:textSize="@dimen/sp_14" />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_selected"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="53dp"
        android:layout_marginRight="53dp"
        android:layout_marginTop="25dp"
        android:minHeight="80dp"
        android:background="@drawable/radius_10_card_gray"
        android:overScrollMode="never"
        android:padding="15dp" />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_mnemonic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="53dp"
        android:layout_marginRight="53dp"
        android:layout_marginTop="17dp"
        android:overScrollMode="never" />


    <Button
        android:id="@+id/btn_confirm"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_gravity="center"
        android:layout_marginLeft="53dp"
        android:layout_marginRight="53dp"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@drawable/btn_red"
        android:gravity="center"
        android:text="@string/input_pwd_dialog_confirm"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_14" />


</LinearLayout>    </android.support.v4.widget.NestedScrollView>