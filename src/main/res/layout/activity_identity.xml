<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/global_bg_grey">
    <include layout="@layout/common_toolbar" />
    <RelativeLayout
        android:layout_width="match_parent"
        style="@style/identity_row">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="头像"
            style="@style/identity_row_text_left"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/avator_normal"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
        <include layout="@layout/divider_gray"/>
    <RelativeLayout
        android:layout_width="match_parent"
        style="@style/identity_row">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="身份名"
            style="@style/identity_row_text_left"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_identity_name"
            style="@style/identity_row_text_right"/>
    </RelativeLayout>
        <include layout="@layout/divider_gray"/>
    <RelativeLayout
        android:layout_width="match_parent"
        style="@style/identity_row">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="身份ID"
            style="@style/identity_row_text_left"/>
        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_identity_id"
            style="@style/identity_row_text_right"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_marginTop="@dimen/dp_20">
        <TextView
            android:layout_width="match_parent"
            style="@style/identity_row_bottom_text"
            android:textColor="@color/text_blue"
            android:text="备份身份" />
        <include layout="@layout/divider_gray"/>
        <TextView
            android:layout_width="match_parent"
            style="@style/identity_row_bottom_text"
            android:textColor="@color/red"
            android:text="退出当前身份"/>
    </LinearLayout>

</LinearLayout>