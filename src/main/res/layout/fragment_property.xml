<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/drawer">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/global_bg_grey">
<include layout="@layout/toolbar_property_fragment"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_20">
        <RelativeLayout
            style="@style/WalletCard">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_main_wallet_name"
                android:textColor="@color/white"
                android:layout_alignParentTop="true"
                android:textSize="@dimen/sp_16"/>
            <!--<TextView-->
                <!--android:id="@+id/btn_manage_wallet"-->
                <!--android:layout_width="18dp"-->
                <!--android:layout_height="18dp"-->
                <!--android:layout_alignParentTop="true"-->
                <!--android:layout_alignParentEnd="true"-->
                <!--android:layout_marginTop="10dp"-->
                <!--android:drawableStart="@drawable/selector_main_wallet_more" />-->
            <ImageView
                android:id="@+id/btn_manage_wallet"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_more_horiz_white_18dp"/>
            <TextView
                android:layout_width="178dp"
                android:layout_height="20dp"
                android:id="@+id/tv_wallet_main_addr"
                android:textColor="@drawable/selector_addr"
                android:textSize="@dimen/sp_14"
                android:ellipsize="middle"
                android:singleLine="true"
                android:layout_alignParentStart="true"
                android:drawableEnd="@drawable/selector_qr_mini"
                android:layout_below="@id/tv_main_wallet_name"
                android:drawablePadding="@dimen/dp_4"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_18"
                android:text="0.00 ï¿¥"
                android:gravity="center"
                android:textStyle="bold"
                android:id="@+id/tv_wallet_main_balance"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:weightSum="4"
            android:layout_marginTop="@dimen/dp_20"
            android:background="@drawable/radius_10_card"    >
            <LinearLayout
                style="@style/quick_bar"
                android:id="@+id/ll_trans">
                <ImageView
                    android:id="@+id/btn_ransfer"
                    style="@style/quick_bar_icon"
                    android:src="@drawable/icon_transfer"/>
                <TextView
                    style="@style/quick_bar_text"
                    android:text="@string/quick_bar_text_trans"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_receipt"
                style="@style/quick_bar">
                <ImageView
                    style="@style/quick_bar_icon"
                    android:src="@drawable/icon_receipt"/>
                <TextView
                    style="@style/quick_bar_text"
                    android:text="@string/quick_bar_text_receipt"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_scan"
                style="@style/quick_bar">
                <ImageView
                    style="@style/quick_bar_icon"
                    android:src="@drawable/icon_qr_scan"/>
                <TextView
                    style="@style/quick_bar_text"
                    android:text="@string/quick_bar_text_scan"/>
            </LinearLayout>
            <LinearLayout
                style="@style/quick_bar">
                <ImageView
                    style="@style/quick_bar_icon"
                    android:src="@drawable/icon_business"/>
                <TextView
                    style="@style/quick_bar_text"
                    android:text="@string/quick_bar_text_trad"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/property_bar"
            android:orientation="vertical"
            android:paddingStart="@dimen/dp_20"
            android:paddingEnd="@dimen/dp_20">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:text="@string/text_property"
                android:textStyle="bold"
                android:textSize="@dimen/sp_18"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:textColor="#FF333333"
                android:id="@+id/tv_main_wallet__property"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line"/>
            <!--<TextView-->
                <!--android:id="@+id/btn_add_property"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_alignParentRight="true"-->
                <!--android:drawableLeft="@drawable/selector_main_add_property"/>-->
            <android.support.v4.widget.SwipeRefreshLayout
                android:id="@+id/swf_property"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rc_token"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </android.support.v4.widget.SwipeRefreshLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
<include layout="@layout/nav_layout"/>
</android.support.v4.widget.DrawerLayout>